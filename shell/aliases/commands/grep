#!/usr/bin/env bash

# Makes using `grep` all that much easier. Where;
# i: case insensitive
# n: line number
# r: recursive
# F: makes grep search with a string instead of regex
# l: list of filenames instead of contexts
alias   grp="grep   -inF --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias  grpr="grep  -inrF --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias  grpl="grep  -inFl --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias grprl="grep -inrFl --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias   grp="grep   -inF --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias  grpr="grep  -inrF --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias  grpl="grep  -inFl --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"
alias grprl="grep -inrFl --exclude-dir .git --exclude-dir .sass-cache --exclude-dir bower_components --exclude-dir coverage --exclude-dir docs --exclude-dir node_modules --exclude-dir reports --exclude-dir typings --color"

# Allow for typos
alias grplr="greprl"

# vim: set syn=sh :
